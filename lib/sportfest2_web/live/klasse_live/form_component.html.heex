<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="klasse-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :name %>
    <%= text_input f, :name %>
    <%= error_tag f, :name %>
  
    <%= label f, :klassen_scoreboard %>
    <%= text_input f, :klassen_scoreboard %>
    <%= error_tag f, :klassen_scoreboard %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
